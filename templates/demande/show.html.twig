{% extends 'base.html.twig' %}

{% block title %}Demande{% endblock %}

{% block body %}
   <br> <h1 style="margin-left:14cm; font-weight:bold;">Demandes</h1>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ demande.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ demande.titre }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ demande.Contenu }}</td>
            </tr>
            <tr>
                <th>Examen</th>
                <td>{{ demande.examen }}
                <br><br><img src="{{asset('uploads/examen/' ~demande.examen)}}">
                </br>
                </td>
            </tr>
            <tr>
                <th>Date de création</th>
                <td>{{ demande.dateCreation ? demande.dateCreation|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
             <tr>
                <th>Médecin généraliste</th>
                <td>{{ demande.generaliste.email}}</td>
            </tr>
        </tbody>
    </table>

   <a style="margin-left:14cm;" href="{{ path('app_demande_index') }}">Retour à la liste</a>

    &nbsp; &nbsp; <a href="{{ path('app_demande_edit', {'id': demande.id}) }}">Modifier la demande</a>

    {{ include('demande/_delete_form.html.twig') }}
{% endblock %}
